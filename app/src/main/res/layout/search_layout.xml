<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="@dimen/size8"
        android:layout_margin="@dimen/size8"
        app:cardBackgroundColor="@color/search_backgroung"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Search here..."
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginBottom="-2dp"
            android:theme="@style/CustomSearchViewTheme"
            app:iconifiedByDefault="false"
            app:searchPrefixText="Raja"
            tools:ignore="ExtraText" />
            <LinearLayout
                android:id="@+id/llcancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/textcolour_lite"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginBottom="@dimen/size10"/>
                <TextView
                    android:id="@+id/search_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colormy_primary"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginEnd="@dimen/size8"
                    android:text="Cancel"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>